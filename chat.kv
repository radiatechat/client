<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<ChatLog@ScrollView+BackgroundColor>
    background_color: 0, 0, 0, 0

<Chat>:
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        center_x: root.center_x
        y: root.height - 65
        text: "Radiate Client v0.2"
        font_size: 20

    ChatLog:
        id: chatscroll
        width: root.width - 30
        x: 15
        height: root.height - chatbox.top - 60
        y: chatbox.top + 30
        background_color: 0.1, 0.1, 0.1, 1
        effect_cls: 'ScrollEffect'

        GridLayout:
            cols: 1
            spacing: 10
            size_hint_y: None
            height: chatlog.texture_size[1]

            Label:
                id: chatlog
                text: "Enter a username."
                text_size: self.width, None
                size_hint: (1, None)
                size: self.parent.width, self.texture_size[1]
                font_size: 16
                halign: 'center'
                valign: 'bottom'
                markup: True

    TextInput:
        id: chatbox
        multiline: False
        on_text_validate: app.chathandler.on_enter(self.text)

        width: root.width-20
        center_x: root.center_x
        height: 30
        y: 10

        background_color: (0.5,0.5,0.5,1)
        foreground_color: (1,1,1,1)